	<profiles>
	    <profile>
	        <id>gwt-1.5.0-windows</id>
	        <activation>
	            <os>
	                <family>windows</family>
	            </os>
	        </activation>
	        <properties>
	            <google.webtoolkit.home>
	                ${env.GWT_HOME}
	            </google.webtoolkit.home>
	        </properties>
	        <dependencies>
	            <dependency>
	                <groupId>com.google.gwt</groupId>
	                <artifactId>gwt-dev-windows</artifactId>
	                <version>1.5-RC1</version>
	                <scope>system</scope>
	                <systemPath>
	                    ${google.webtoolkit.home}/gwt-dev-windows.jar
	                </systemPath>
	            </dependency>
	        </dependencies>
	    </profile>
	    <profile>
	        <id>gwt-1.5.0-mac</id>

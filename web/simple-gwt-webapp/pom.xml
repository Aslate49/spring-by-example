        </profile>
	</profiles>
	<build>
	    <plugins>
	        <plugin>
	            <artifactId>maven-compiler-plugin</artifactId>
	            <configuration>
	                <source>1.5</source>
	                <target>1.5</target>
                    <encoding>UTF-8</encoding>                    
	            </configuration>
	        </plugin>
	        <plugin>
	            <groupId>com.totsp.gwt</groupId>
	            <artifactId>maven-googlewebtoolkit2-plugin</artifactId>
	            <version>2.0-beta20</version>
	            <configuration>
	                <logLevel>INFO</logLevel>
                    <runTarget>org.springbyexample.web.gwt.App/App.html</runTarget>
	                <compileTargets>
	                    <value>org.springbyexample.web.gwt.App</value>
	                </compileTargets>
	                <extraJvmArgs>-Xmx256M -Xms64M</extraJvmArgs>
	            </configuration>
	            <executions>
	                <execution>
	                    <goals>
	                        <!-- <goal>mergewebxml</goal> -->
	                        <goal>compile</goal>
	                    </goals>
	                </execution>
	            </executions>
	        </plugin>
	        <plugin>
	            <groupId>org.mortbay.jetty</groupId>
	            <artifactId>maven-jetty-plugin</artifactId>
	            <configuration>
	                <scanIntervalSeconds>10</scanIntervalSeconds>
	                <contextPath>/simple-gwt</contextPath>
	            </configuration>
	        </plugin>
	    </plugins>
	</build>


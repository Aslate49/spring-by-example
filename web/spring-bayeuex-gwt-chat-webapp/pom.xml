    <build>
        <finalName>chat</finalName>
        
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <!--  configure the GWT-Maven plugin -->
            <plugin>
                <groupId>com.totsp.gwt</groupId>
                <artifactId>maven-googlewebtoolkit2-plugin</artifactId>
                <version>2.0-beta24</version>
                <configuration>
                    <logLevel>INFO</logLevel>
                    <compileTargets>
                        <value>org.springbyexample.web.gwt.chat.App</value>
                    </compileTargets>
                    <runTarget>org.springbyexample.web.gwt.chat.App/App.html</runTarget>
                    <style>DETAILED</style>
                    <noServer>false</noServer>
                    <extraJvmArgs>-Xmx512m</extraJvmArgs>
                    <!--
                        this parameter is VERY important with automatic
                        mode - has to match the version in your declared
                        deps
                    -->
                    <!--
                        if this is set incorrect, or left out and
                        default does not match (default is 1.5.2 for
                        2.0-beta23) you will have mysterious errors
                    -->
                    <gwtVersion>${gwt.version}</gwtVersion>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
            <!--  Use the dependency plugin to unpack gwt-dev-PLATFORM-libs.zip -->
            <!--
                (this is a replacement for the old "automatic" mode -
                useful if you don't have GWT installed already, or you
                just want a maven way to handle gwt deps)
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <!-- Needed for GWTApplication.launch to run -->
                    <execution>
                        <id>unpack</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <!--
                                    For GWTApplication.launch, OS
                                    specific jar referenced needs it's
                                    libs in the same directory
                                -->
                                <artifactItem>
                                    <groupId>com.google.gwt</groupId>
                                    <artifactId>gwt-dev</artifactId>
                                    <version>${gwt.version}</version>
                                    <classifier>${platform}-libs</classifier>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${settings.localRepository}/com/google/gwt/gwt-dev/${gwt.version}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- 
                Using plugin to copy results of GWT plugin into src/main/webapp.
               
                    http://docs.codehaus.org/display/GROOVY/GMaven+-+Executing+Groovy+Code
            -->
            <plugin>
                <groupId>org.codehaus.mojo.groovy</groupId>
                <artifactId>groovy-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <source><![CDATA[
                                def gwtDir = "org.springbyexample.web.gwt.chat.App"
                                def generatedGwtDir = "target/chat/" + gwtDir
                                def srcDir = "src/main/webapp/" + gwtDir
                                
                                ant.delete() {
                                    fileset(dir: srcDir) {
                                        include(name: "*")
                                    }
                                }
                                
                                log.info("Deleted from '" + srcDir + "'.")
                                
                                ant.copy(todir: srcDir) {
                                    fileset(dir: generatedGwtDir) {
                                        include(name: "*")
                                    }
                                }
                                
                                log.info("Copied from '" + generatedGwtDir + "' to '" + srcDir + "'.")
                            ]]></source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <configuration>
                    <scanIntervalSeconds>10</scanIntervalSeconds>
                    <contextPath>/chat</contextPath>
                </configuration>
            </plugin>
        </plugins>
